<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray800"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarOwner"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/txtNameOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:text="Nguyễn Bá Hưng"
            android:textSize="20sp" />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/txtStatusOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:text="default status"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSendFriendRequest"
                android:padding="4dp"
                android:background="@android:color/white"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="1dp"
                android:drawableTop="@drawable/ic_group_add_24dp"
                android:text="Send Friend Request" />

            <Button
                android:id="@+id/btnDeclineFriendRequest"
                android:padding="4dp"
                android:background="@android:color/white"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="1dp"
                android:drawableTop="@drawable/ic_lock_24dp"
                android:text="Decline Friend Request" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>